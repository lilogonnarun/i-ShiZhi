/* pages/index/search/search.wxss */
.introduction{
  display:flex;
  justify-content:space-evenly;
  color: #9B9B9B;
  margin-top: 20rpx;
}
.text{
	width: 140rpx;
	height: 50rpx;
	font-size: 25rpx;
	border: 1px solid #9B9B9B;
	border-radius: 12rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}
.text.active{
	width: 140rpx;
	height: 50rpx;
	font-size: 26rpx;
	font-weight: 600;
	border-radius: 12rpx;
	border: 1.5px solid #a53333;
	color: #a53333;
	display: flex;
	justify-content: center;
	align-items: center;
}
.box {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  background-color: white;
	border-radius: 1.5vw;
}
.icon {
  width: 180rpx;
  height: 180rpx;
  border-radius: 1.5vw;
}
.content{
  color:#bebebe;
	font-size:23rpx;
	/* width: 500rpx; */
	/* height: 55rpx; */
	line-height: 1.2;
}
.curNav{
	color: #d0d0d0;
	font-weight: 600;
	height:70rpx;
	width: 33%;
	display:flex;
	justify-content:center;
	align-items:center;
}
.curNav.active{
	color: #a53333;
	background-color: white;
}
.cu-bar .search-form {
	background-color: #f5f5f5;
	line-height: 64rpx;
	height: 64rpx;
	font-size: 24rpx;
	color: var(--black);
	flex: 1;
	display: flex;
	align-items: center;
	margin: 0 30rpx;
}
.cu-bar .search-form+.action {
	margin-right: 30rpx;
}
.cu-bar .search-form input {
	flex: 1;
	padding-right: 30rpx;
	height: 64rpx;
	line-height: 64rpx;
	font-size: 26rpx;
	background-color: transparent;
}
.cu-bar .search-form [class*="cuIcon-"] {
	margin: 0 0.5em 0 0.8em;
}
.cu-bar .search-form [class*="cuIcon-"]::before {
	top: 0rpx;
}
/* 历史搜索记录*/
.search_history_title{
	font-size: 30rpx;
	font-weight: 600;
	margin-top: 30rpx;
	margin-left: 30rpx;
	flex: 1;
}
.search_history{
	display: inline-block;
	margin-left: 30rpx;
}
.history_item{
	font-size: 25rpx;
	color: gray;
	background-color: #f0f0f0;
	width: fit-content;
	padding: 8rpx 15rpx 8rpx 15rpx;
	margin-top: 20rpx;
	border-radius: 10rpx;
}
.clear_history{
	font-size: 25rpx;
  color: #8a8a8a;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
	align-items: center;
	width:180rpx;
	margin-right: 20rpx;
	float: right;
	margin-top: 30rpx;
}