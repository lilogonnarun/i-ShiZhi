/* pages/senior/senior.wxss */
/*分类栏*/
.top_section{
  width: 100%;
  height: 75rpx;
  display: flex;
  align-items: center;
  position: relative;
  z-index: 999;
  background-color: white;
}
.navbar {
  display: flex;
  width: 80%;
  margin-left: 10%;
  text-align: center;
  align-items: center;
  position: absolute;
  color: #A8A8A8;
  font-size: 32rpx;
  box-sizing: border-box;
}
.navbar-item {
  width:200rpx;
  color: #303030;
  margin-left: 20rpx;
  
}
/* 搜索框 */
.search-form {
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  height: 60rpx;
  margin: 20rpx;
}
/* 轮播图 */
swiper {
  width: 100%;
  height: calc(100vw*352/1125);
}
swiper image {
  width: 100%;
  height: 100%;
}
.nav {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  font-size: 28rpx;
}
.nav .single {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
}
.nav .single .image_nav {
  width: 55rpx;
  height: 55rpx;
}
.nav .single .image_text {
  color: #303030;
  font-size: 27rpx;
}
.Recommend {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
  margin-top: 50rpx;
  font-size: 28rpx;
}
.Recommend image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx 0 20rpx;
}
