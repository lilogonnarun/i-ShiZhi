/* pages/senior/senior.wxss */
/* 搜索框 */
.search-form {
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  background-color: #f6f6f6;
  height: 60rpx;
  margin: 20rpx;
}
/* 轮播图 */
swiper {
  width: 100%;
  height: calc(100vw*352/1125);
}
swiper image {
  width: 100%;
  height: 100%;
}
.nav {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
  font-size: 28rpx;
}
.nav .single {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
}
.nav .single .image_nav {
  width: 55rpx;
  height: 55rpx;
}
.nav .single .image_text {
  color: #303030;
  font-size: 27rpx;
}
.Recommend {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
  margin-top: 50rpx;
  font-size: 28rpx;
}
.Recommend image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx 0 20rpx;
}
.Card_List {
  padding: 0 25rpx;
  justify-content: center;
  margin-top: 20rpx;
}
.Card_List .card {
  padding: 20rpx 25rpx;
  box-shadow: 0rpx 0rpx 20rpx 10rpx rgba(85, 85, 85, 0.10);
  border-radius: 20rpx;
}
.Card_List .card .head {
  display: flex;
}
.Card_List .card .head .head_photo {
  margin-left: 20rpx;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  align-self: center;
}
.Card_List .card .head .head_photo image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  will-change: transform;
}
.Card_List .card .head .head_name {
  margin-top: 10rpx;
}
.Card_List .card .head .head_name .name {
  text-size-adjust: 20rpx;
  font-weight: 600;
  font-size: 30rpx;
}
.Card_List .card .head .head_name .background {
  text-size-adjust: 10rpx;
  font-size: 25rpx;
  color: #4d4d4d;
}
.Card_List .card .specialty {
  margin-left: 20rpx;
  line-height: 1.5;
  font-size: 28rpx;
}