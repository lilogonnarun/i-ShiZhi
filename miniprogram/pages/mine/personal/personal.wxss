/* pages/personal/personal.wxss */
.list_box {
  margin:30rpx 5%;
  width:90%;
  margin-left:5%;
  background-color:white;
  border-radius:30rpx;
  box-shadow: 0rpx 10rpx 30rpx 10rpx rgba(85, 85, 85, 0.10);
}
.useInfo{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx 20rpx 20rpx 20rpx;
  width: 650rpx;
}
.avatar{
  width:200rpx;
  height:200rpx;
  border-radius:100rpx;
  box-shadow: 0rpx 10rpx 30rpx 10rpx rgba(85, 85, 85, 0.10);
  display: flex;
  overflow: hidden;
}
/* 列表样式 */
.list{
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content: space-between;
  width: 90%;
  margin-left: 5%;
  padding: 25rpx 0;
  font-size: 28rpx;
  border-bottom: 0.5px solid #f0f0f0;
}
.title{
  text-size-adjust: 20rpx;
  font-weight: 600;
  font-size: 26rpx;
}
.list input{
  width: 520rpx;
}
.add{
  width: 80rpx;
  height: 80rpx;
  margin:15%;
}
.info-box{
  width: 120rpx;
  height: 120rpx;
  margin-right: 50%;
  border:0.5rpx solid #cfcfcf;
}
.ensurebutton{
  color:rgb(252, 252, 252);
  background-color: #075EAE;
  font-size: 30rpx;
  border-radius: 20rpx;
}
.ensurebuttonarea{
  margin:5%;
  margin-left: 10%;
  width:80%;
}