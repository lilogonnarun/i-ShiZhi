/* pages/mine/settleIn/settleIn.wxss */
.outerWapper {
  padding-bottom: 50rpx;
}
/* 用户来源 */
.origin {
  /* border: 1rpx solid red; */
  padding-bottom: 20rpx;
  box-shadow: 0 1rpx 10rpx 5rpx rgba(0, 0, 0, .1);
}
.question {
  position: relative;
  top: 20rpx;
  left: 50rpx;
  font-size: 32rpx;
  font-weight: 800;
}
.origin .origin_tagBox{
  display: flex;
  justify-content: space-evenly;
}

/* 擅长领域 */
.skilled_field {
  margin-top: 20rpx;
  box-shadow: 0 1rpx 10rpx 5rpx rgba(0, 0, 0, .1);
  padding-bottom: 20rpx;
}
.field_tagBox {
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}


/* 个人信息 */
.personal_info {
  margin-top: 20rpx;
  box-shadow: 0 1rpx 10rpx 5rpx rgba(0, 0, 0, .1);
  padding-bottom: 20rpx;
}
.personal_info .Info_item {
  display: flex;
  margin: 0 0 30rpx 60rpx;
}
.personal_info .Info_item:nth-of-type(1) {
  margin-top: 50rpx;
}
.personal_info .Info_item view {
  width: 180rpx;
  font-size: 36rpx;
}
.personal_info .Info_item input {
  border-bottom: 1rpx solid rgba(0, 0, 0, .2);
  width: 460rpx;
}
.placeholder {
  font-size: 28rpx;
  color: rgba(0, 0, 0, .2);
}


/* 自我描述 */
.description {
  margin-top: 20rpx;
  box-shadow: 0 1rpx 10rpx 5rpx rgba(0, 0, 0, .1);
  padding-bottom: 20rpx;
}
.descInput {
  margin: 30rpx 0 0 50rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, .2);
  width: 600rpx;
}

/* 擅长话题 */
.skilled_topic {
  margin: 20rpx 0 30rpx 0;
  padding-bottom: 50rpx;
  box-shadow: 0 1rpx 10rpx 5rpx rgba(0, 0, 0, .1);
}
.skilled_topic .notice {
  font-size: 28rpx;
  font-weight: initial;
  color: #797979;
}
.skilled_topic .topic_box {
  width: 85%;
  padding: 30rpx 30rpx 0 30rpx;
  margin: 30rpx auto;
  margin-top: 40rpx;
  border-radius: 50rpx;
  border: 1rpx solid rgba(0, 0, 0, .5);
}
.skilled_topic .topic_box .head {
  padding-bottom: 10rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(0, 0, 0, .2);
}
.skilled_topic .topic_box .index {
  display: inline-block;
  border: 1rpx solid black;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 50%;
  font-size: 26rpx;
  text-align: center;
}
.topic_box .bottom {
  margin-top: 15rpx;
}
.topic_box .bottom .title {
  font-size: 32rpx;
  font-weight: 800;
}
.topic_box input,
.topic_box textarea {
  width: 550rpx;
  font-size: 32rpx;
}
.topic_box textarea {
  width: 650rpx;
}
.add_topic {
  margin-left: 50rpx;
  display: flex;
  font-size: 26rpx;
}
.add_icon {
  width: 30rpx;
  height: 30rpx;
}
.add_topic view {
  font-size: 24rpx;
}

/* 按钮 */
.footer {
  display: flex;
}
.footer button {
  flex-basis: 230rpx;
  background-color: rgb(196, 243, 251);
  color:#5D87D4;
  font-weight: 900;
  font-size: 32rpx;
}
