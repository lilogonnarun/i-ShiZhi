.top_box {
  width: 100%;
  height: 400rpx;
  background-color: bisque;
  padding: 50rpx;
}
.top_box .top_first {
  display: flex;
  width: 100%;
  height: 300rpx;
}
.top_box .top_first .top_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 60rpx;
  box-shadow: 0rpx 10rpx 30rpx 10rpx rgba(85, 85, 85, 0.1);
  display: flex;
  overflow: hidden;
}
.top_box .top_first .name_signature .name {
  display: flex;
  align-items: center;
  padding: 10rpx;
  font-size: 38rpx;
  font-weight: 600;
  color: #3c3c3c;
}
.top_box .top_first .name_signature .signature {
  display: flex;
  align-items: center;
  padding: 10rpx;
  font-size: 28rpx;
  font-weight: 200;
  color: #4d4343;
}
.content {
  display: flex;
}
.column {
  width: 47%;
  margin-left: 2%;
}
.box {
  margin-top: 15rpx;
  box-shadow: 0rpx 0rpx 20rpx 10rpx rgba(85, 85, 85, 0.1);
  border-radius: 10rpx;
}
.box image.content_pic {
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.box .title {
  font-size: 28rpx;
  font-weight: 600;
  color: #313131;
  padding: 0 5%;
  display: -webkit-box;
  /*定义为自适应布局——最多容纳22个字*/
  -webkit-line-clamp: 2;
  /*限制2行*/
  -webkit-box-orient: vertical;
  /*超出2行的文字用省略号代替(水平)*/
  overflow: hidden;
  /*超出部分文字隐藏(竖直)*/
}
.box .bottom_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #3c3c3c;
  padding: 20rpx 5%;
}
.box .userAvatarUrl {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  overflow: hidden;
}
.box .userNickName {
  font-size: 24rpx;
  margin-left: 10rpx;
  width: 150rpx;
  /*限制长度*/
  overflow: hidden;
  /*超出隐藏*/
  text-overflow: ellipsis;
  /*溢出显示用省略号*/
  white-space: nowrap;
  /*溢出不换行*/
}
.box image.likes {
  width: 40rpx;
  height: 40rpx;
}
.box .likes_num {
  font-size: 25rpx;
}
