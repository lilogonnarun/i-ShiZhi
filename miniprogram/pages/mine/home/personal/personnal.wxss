/* pages/personal/personal.wxss */

/* 页面容器 */
.listBox {
  padding-top: 30rpx;
  /* border: 1rpx solid red; */
}

/* 头像 */
.avatarBox {
  /* border: 1rpx solid red; */
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 650rpx;
}

/* 下半部分表单 */
.userForm {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  padding-left: 50rpx;
  /* border: 5rpx solid red; */
}
.userForm .item {
  margin-bottom: 50rpx;
  display: flex;
}
.userForm .item view{
  width: 160rpx;
  font-weight: 750;
  font-size: 32rpx;
  
}
.userForm .item .radio {
  zoom: 1;
}
.userForm .item .radio:nth-of-type(1) {
    margin-right: 60rpx;
}
.userForm .item input {
  width: 500rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .2);
}
.userForm .item .holder {
  font-size: 26rpx;
}
.userForm .introduce{
  display: block;
}
.userForm .introduce textarea {
  margin-top: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, .2);
  width: 660rpx;
  font-size: 32rpx;
}
.avatar{
  width:200rpx;
  height:200rpx;
  border-radius:100rpx;
  box-shadow: 0rpx 10rpx 30rpx 10rpx rgba(85, 85, 85, 0.10);
  display: flex;
  overflow: hidden;
}
.avatar image {
  width:200rpx;
  height:200rpx;
}

/* 列表样式 */
.ensurebutton{
  margin-bottom: 20rpx;
  background-color: rgb(196, 243, 251);
  color:#5D87D4;
  font-weight: 900;
  font-size: 32rpx;
}
.ensurebutton:nth-of-type(1) {
  width: 300rpx;
}
.ensurebutton:nth-of-type(2) {
  width: 400rpx;
}
.ensurebuttonarea{
  margin:5%;
  margin-left: 10%;
  width:80%;
}