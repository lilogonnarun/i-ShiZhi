  color: rgba(0, 0, 255, 0.685);
  font-size: small;
  font-weight: 1000;
  text-align: right;
 
}
.Card_List .card .head .right-top .minute{
  overflow: hidden;
}
.Card_List .card .head .name_group{
  width: 1000rpx;
  display: flex;
}
.Card_List .card .head .head_name {
  display: flex;
  margin-top: 10rpx;
}
.Card_List .card .head .qualify_photo {
  width: 60rpx;
  height: 50rpx;
  display: flex;
  border-radius: 100%;
  

}
.Card_List .card .head .qualify_photo image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
  will-change: transform;

}
.Card_List .card .mid{
  font-size: 28rpx;
  font-weight: 800;
  
}
.Card_List .card .mid .topic{
  margin-top: 10rpx;
  display: flex;

}
.Card_List .card .mid .topic .wrap{
  margin-left: 30rpx;
  
  display: block;
}
.Card_List .card .mid .time{
  display: flex;

}
.Card_List .card .mid .time .time_light{
 
  font-weight: 100rpx;

}
.Card_List .card .fee{
 
  font-size: small;
  color:  rgba(0, 0, 255, 0.685);
  text-align: right;
  font-weight: 1000;
}

.Card_List .card .mid .specialty_list{
  
  display: flex;
  font-weight: 100rpx;
}
.Card_List .card .mid .specialty_list .specialty{
 font-size: 25rpx;
  margin-left: 50rpx;
  font-weight: 500;
  color: #4d4d4d;
}
.Card_List .card .mid .specialty_list .star{
  width: 30rpx;
  height: 30rpx;
  border-radius: 100%;
  
  will-change: transform;
}

.Card_List .card .mid .specialty_list .star image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
  will-change: transform;
}
.Card_List .card .head .head_name .name {
  text-size-adjust: 20rpx;
  font-weight: 600;
  font-size: 30rpx;
}
.Card_List .card .head .background {
  font-size: 20rpx;
  color: #4d4d4d;
  
}
.Card_List .card .specialty {
  margin-left: 20rpx;
  line-height: 1.5;
  font-size: 28rpx;
}
