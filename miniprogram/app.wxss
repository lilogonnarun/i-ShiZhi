/* pages/index/index.wxss */
/* 通用样式 */
.row{
  display: flex;
  align-items: center;
}
.center{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 顶部导航栏*/
.statusBar{
  background-color: white;
  position: fixed;
  z-index: 999;
  width: 100%;
  top: 0;
}
.top_section{
  width: 100%;
  height: 22rpx;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
  position: fixed;
  z-index: 999;
  background-color: blanchedalmond;
}
/* 搜索按钮 */
.top_section image.search{
  width:50rpx;
  height:50rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
}
.navbar {
  display: flex;
  width: 40%;
  margin-left: 30%;
  text-align: center;
  align-items: center;
  position: absolute;
  color: #A8A8A8;
  font-size: 32rpx;
  box-sizing: border-box;
}
.navbar-item {
  width:150rpx;
}
.navbar-item.on {
  transition: all 0.3s;
  font-weight: 600;
  width: 150rpx;
  color: #075EAE;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.navbar_underline.on{
  transition: all 0.3s;
  background-color: #075EAE;
  width: 50rpx;
  height: 8rpx;
  border-radius: 4rpx;
  margin-top: 5rpx;
}
/* 主体内容 */
.tab_panel{
  margin-top: 10rpx;
  border-top: 1px solid #d1d1d1;
}
.content{
  margin: 0%;
  display: flex;
  align-self: center;
}
.column{
  width: 47%;
  margin-left: 2%;
}
.box{
  margin-top: 15rpx;
  box-shadow: 0rpx 0rpx 20rpx 10rpx rgba(85, 85, 85, 0.10);
  border-radius: 10rpx;
}
.box image.content_pic{
  margin: 0%;
  width: 100%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.box .title{
  font-size: 28rpx;
  font-weight: 600;
  color: #313131;
  padding: 0 5%;
  display: -webkit-box; /*定义为自适应布局——最多容纳22个字*/
  -webkit-line-clamp: 2; /*限制2行*/
  -webkit-box-orient: vertical; /*超出2行的文字用省略号代替(水平)*/
  overflow: hidden; /*超出部分文字隐藏(竖直)*/
}
.box .bottom_row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #3c3c3c;
  padding: 20rpx 5%;
}
.box .userAvatarUrl{
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  overflow: hidden;
}
.box .userNickName{
  font-size: 24rpx;
  margin-left: 10rpx;
  width: 150rpx; /*限制长度*/
  overflow:hidden;  /*超出隐藏*/
  text-overflow:ellipsis;  /*溢出显示用省略号*/
  white-space:nowrap;  /*溢出不换行*/
}
.box image.likes{
  width: 40rpx;
  height: 40rpx;
}
.box .likes_num{
  font-size: 25rpx;
}


/* 顶部分类栏- */
scroll-view.sort_list_box{
  white-space: nowrap;
  width: 90%;
  font-size: 28rpx;
  background-color: #f6f6f6;
}
scroll-view .sort_list{
  display: inline-block;
  color: gray;
}
scroll-view .sort_item{
  padding: 10rpx 20rpx;
}

scroll-view .sort_list:nth-child(2){
  color: black;
  font-weight: 600;
}

/* 查看更多按钮 */
.sortList_more{
  width: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f9f9f9;
}
.sortList_more image{
  width:30rpx;
  height:30rpx;
}
/* 分类栏更多内容(弹出层) */
.popup_shade{
  width:100%;   
  height:100%;
  top: 0;
  background:rgba(114, 114, 114, 0.5);
  z-index: 998; 
  position: absolute;
  overflow: hidden;   
}
.popup{
  background-color: white;
  z-index: 0;
  padding: 10rpx;
}
.popup .top_row{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.popup .top_row .title{
  font-weight: 600;
  font-size: 30rpx;
  margin: 0 0 10rpx 20rpx;
}
.popup .top_row image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.popup .sortList{
  white-space: wrap;
}
.popup .sortItem{
  display: inline-block;
  padding: 10rpx 20rpx;
  margin: 10rpx;
  color: gray;
  font-size: 27rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}
.Card_List {
  padding: 0 25rpx;
  justify-content: center;
  margin-top: 20rpx;
}
.Card_List .card {
  
  padding: 20rpx 25rpx;
